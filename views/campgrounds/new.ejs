<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds" method="post" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" required id="title">
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" required id="location">
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>

                <!-- <input type="file" name="image" id="" multiple> -->
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" name="campground[image]" required id="image">
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div> -->

                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input class="form-control" type="text" name="campground[price]" required placeholder="0.00"
                            area-label="price" area-describedby="price-label" id="price">
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>

                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" required name="campground[description]" id="description"></textarea>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="mb-3">
                    <div class="input-group mb-3">
                        <input type="file" class="form-control" name="image" id="image" multiple>
                        <label class="input-group-text" for="image">Upload Image(s)</label>
                    </div>
                </div>
                <div class="mb-3"><button class="btn btn-success">Add Campground</button></div>

            </form>
            <a href="/campgrounds">Back to Campgrounds</a>
        </div>
    </div>